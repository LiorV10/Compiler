{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/mc", // Adjust the executable file path accordingly
            "args": ["/media/lior/Data/C/Compiler/source/demo.c"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
